        var valid = {!valid};
        var instructions = {!instructions};
        var lanerror = {!lanerror};
        var noContact = {!noContact};
        var formID = "{!formID}";
        
        
        
        $Lightning.use("c:Reports", function() {
          $Lightning.createComponent("c:Report",
                {"authenticated": valid,
                "sessionID" : sID,
                "formID" : formID
